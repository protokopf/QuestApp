<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical">
      <GridLayout
          android:id="@+id/stubLayout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:columnCount="3">
          <android.support.design.widget.TextInputLayout
              android:id="@+id/questTitleInputLayout"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:layout_row="0"
              android:layout_column="0"
              android:layout_columnSpan="3"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:layout_marginTop="16dp">
              <EditText
                  android:id="@+id/questTitleEditText"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:hint="@string/QuestCreateTitleHint" />
          </android.support.design.widget.TextInputLayout>
          <android.support.design.widget.TextInputLayout
              android:id="@+id/questDescriptionInputLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_row="1"
              android:layout_column="0"
              android:layout_columnSpan="3"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:layout_marginTop="16dp">
              <EditText
                  android:id="@+id/questDescriptionEditText"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:hint="@string/QuestCreateDescriptionHint" />
          </android.support.design.widget.TextInputLayout>
          <CheckBox
              android:id="@+id/questCreateImportantCheckbox"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:layout_row="2"
              android:layout_column="0"
              android:layout_columnSpan="3"
              android:text="@string/QuestCreateImportant" />
          <CheckBox
              android:id="@+id/startCheckbox"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_row="3"
              android:layout_column="0"
              android:text="@string/QuestCreateStartCheckBoxTitle" />
          <Button
              android:id="@+id/startDateButton"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_row="3"
              android:layout_column="1"
              android:text="@string/QuestCreateDateTitle"
              android:visibility="gone" />
          <Button
              android:id="@+id/startTimeButton"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_row="3"
              android:layout_column="2"
              android:text="@string/QuestCreateTimeTitle"
              android:visibility="gone" />
          <CheckBox
              android:id="@+id/deadlineCheckbox"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_row="4"
              android:layout_column="0"
              android:text="@string/QuestCreateDeadlineCheckBoxTitle" />
          <Button
              android:id="@+id/deadlineDateButton"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_row="4"
              android:layout_column="1"
              android:text="@string/QuestCreateDateTitle"
              android:visibility="gone" />
          <Button
              android:id="@+id/deadlineTimeButton"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_row="4"
              android:layout_column="2"
              android:text="@string/QuestCreateTimeTitle"
              android:visibility="gone" />
      </GridLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/questCreateSaveButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/save_button" />
</android.support.design.widget.CoordinatorLayout>